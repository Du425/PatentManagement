<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.du.patentmanagement.mapper.PatentmanagementMapper">

    <resultMap id="queryPatentByCondition" type="com.du.patentmanagement.entity.Patentmanagement">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="type" property="type"/>
        <result column="author" property="author"/>
        <result column="number" property="number"/>
        <result column="apply_date" property="applyDate"/>
        <result column="owner" property="owner"/>
        <result column="announce_date" property="announceDate"/>
        <result column="authorize_unit" property="authorizeUnit"/>
    </resultMap>

    <select id="queryPatentByCondition" resultType="com.du.patentmanagement.entity.Patentmanagement">
        select id, apply_date, owner, announce_date, authorize_unit, name,type,author,number from patent.patentmanagement
        where name like CONCAT('%',#{keyword},'%')
        or owner like CONCAT('%',#{keyword},'%')
        or author like CONCAT('%',#{keyword},'%')
        or type like CONCAT('%',#{keyword},'%')
        or authorize_unit like CONCAT('%',#{keyword},'%')
    </select>

</mapper>
